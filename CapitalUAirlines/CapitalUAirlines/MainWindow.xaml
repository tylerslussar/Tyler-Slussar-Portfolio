<Window x:Class="CapitalUAirlines.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapitalUAirlines"
        mc:Ignorable="d"
        Title="Selection Window" Height="350" Width="500" Background="Indigo" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Capital U Airlines" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Foreground="White" FontWeight="Bold"/>
        <Button x:Name="passenger" Grid.Row="1" Content="Passenger" Height="50" Width="200" FontSize="25" Click="Passenger_Click"/>
        <Button x:Name="manager" Grid.Row="2" Content="Manager" Height="50" Width="200" FontSize="25" Click="Manager_Click"/>
        <Button x:Name="close" Grid.Row="3" Content="Close" Height="35" Width="100" FontSize="15" HorizontalAlignment="Right" Margin="5" VerticalContentAlignment="Center" Click="Close_Click"/>
    </Grid>
</Window>
